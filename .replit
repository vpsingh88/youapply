modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Backup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Config Check"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Setup and Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Pull and Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Merge and Push"

[[workflows.workflow]]
name = "Run Flask App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 8080

[[workflows.workflow]]
name = "Create Backup"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_backup.py"

[[workflows.workflow]]
name = "Git Setup"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git config --global user.name 'Youapply AI' && git config --global user.email 'youapply@example.com' && git config --list"

[[workflows.workflow]]
name = "Git Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git remote add origin $GITHUB_REPO_URL && git add . && git commit -m 'Initial commit' && git push -u origin main"

[[workflows.workflow]]
name = "Git Config Check"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git config --list && echo '---' && git remote -v"

[[workflows.workflow]]
name = "Git Setup and Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --list
    echo '---'
    git remote -v
    echo '---'
    git remote set-url origin $GITHUB_REPO_URL
    echo '---'
    git add .
    echo '---'
    git commit -m 'Initial commit'
    echo '---'
    git push -u origin main
    """

[[workflows.workflow]]
name = "Git Pull and Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git pull origin main --allow-unrelated-histories
    git add .
    git commit -m \"Merge remote changes and sync local code\"
    git push -u origin main
    """

[[workflows.workflow]]
name = "Git Merge and Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config pull.rebase false
    git pull origin main
    git add .
    git commit -m \"Merge remote changes and sync local code\"
    git push -u origin main
    """

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 80
externalPort = 3000

[[ports]]
localPort = 443
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
